# Créer un fichier .gitignore
cat > .gitignore << EOL
# Dépendances
node_modules/
npm-debug.log
yarn-debug.log
yarn-error.log

# Environnement
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Système de fichiers
.DS_Store
Thumbs.db

# Base de données SQLite si utilisée
*.sqlite
*.sqlite3

# Fichiers de log
logs/
*.log

# Dossier de build
dist/
build/

# Fichiers temporaires
tmp/
.tmp/

# Fichiers de configuration IDE
.idea/
.vscode/
*.swp
*.swo
EOL